<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.hibernate.been.News" table="news">
		<id name="id" type="int">
			<column name="id" />
			<generator class="identity" />
		</id>
		<property column="title" name="title"
			type="java.lang.String" />
		<property column="description" name="description" type="string" />
		<property column="content" name="content" type="string" />
		<property column="publisher" name="publisher" type="date" />
		<property column="author" name="author" type="string" />
		<property column="released" name="released" type="int"/>
	</class>
</hibernate-mapping>

